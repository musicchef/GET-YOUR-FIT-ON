<h2>{{ username }}'s Profile</h2>
</section>
<section class="profile-pic">
    <img src="{{ user.profile_photo }}" alt="{{ user.username }}" class="profile-picture">
</section>
<section class="user-activities">
    <h2>Exercises</h2>
    <ul>
        {{#each exercise as |exercise index|}}
            <li>
                {{ exercise.title }} for <span class="workoutMinutes">{{ exercise.minutes }}</span> minutes<br>
                This exercise burns <span class="caloriesPerhour">{{ exercise.calories_per_hour }}</span> calories per hour.<br>
                You burned <span class="caloriesBurned" data-exercise-index={{ index }}></span> calories!
            </li>
        {{/each}}
    </ul>
</section>
<section class="user-nutrition">
    <h2>Nutrition</h2>
    <ul>
        {{#each nutrition as |nutrition index|}}
            <li>
                <span class="servings">{{ nutrition.calorie_count_servings }}</span> serving(s) of {{ nutrition.food_name }}<br>
                There are <span class="calsPerServing">{{ nutrition.calorie_count_per_serving }}</span> calories per serving.
                You consumed <span class="caloriesConsumed" data-nutrition-index={{ index }}></span> calories.
            </li>
        {{/each}}
    </ul>
</section>
